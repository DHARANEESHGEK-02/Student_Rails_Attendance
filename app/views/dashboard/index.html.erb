<div class="container mt-4">

  <h2 class="text-center text-primary fw-bold mb-4">
    ğŸ“Š Attendance Analytics Dashboard
  </h2>

  <!-- ğŸ“… Monthly Filter -->
  <div class="mb-4 text-center">
    <%= form_with url: dashboard_path, method: :get, local: true do %>
      <%= month_field_tag :month,
            params[:month] || Date.today.strftime("%Y-%m"),
            class: "form-control w-25 d-inline" %>

      <%= submit_tag "Filter", class: "btn btn-primary ms-2" %>
    <% end %>
  </div>

  <!-- ğŸ“Š Chart -->
  <div class="card shadow p-4 mb-5">
    <canvas id="attendanceChart"></canvas>
  </div>

  <!-- ğŸ† Top Students -->
  <div class="card shadow p-4">
    <h4 class="mb-3">ğŸ† Top 5 Students (Overall Attendance)</h4>

    <% if @top_students.present? %>
      <ul class="list-group">
        <% @top_students.each do |student| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <strong><%= student.name %></strong>
            <span class="badge bg-success">
              <%= student.attendance_percentage %>%
            </span>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted">No attendance data available.</p>
    <% end %>

  </div>

</div>

<script>
document.addEventListener("DOMContentLoaded", function() {

  const ctx = document.getElementById('attendanceChart');

  if (ctx) {
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: <%= raw @monthly_attendance.keys.map { |d| d.strftime("%d %b") }.to_json %>,
        datasets: [{
          label: 'Present Count',
          data: <%= raw @monthly_attendance.values.to_json %>,
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  }

});
</script>
